<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/nav') %>
            <% if(user) {%>
                <div class="container p-4">
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h3>Hi!, <%= user.name %> üëãüèº</h3> <br>
                                    <h4>- Welcome to your profile üòé </h4>
                                    <a href="admin/newPost" class="btn btn-primary m-4">New post</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8 mx-auto m-4">
                            <h3 class="text-center">YOUR POSTS</h3>
                            <% if (data.length === 0) { %>
                               <div class="row m-4 p-4 text-center">
                                <h3> No posts to display.</h3>
                                
                            </div>
                            <div class="row  text-center">
                                <h3>üòï</h3>

                            </div>
                                <% } else { %>
                                    <br>
                                    
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">POST</th>
                                                <th scope="col">TITLE</th>
                                                <th scope="col">PUBLISHED</th>
                                                <th scope="col">ACTION</th>
                                            </tr>
                                        </thead>
                                        <% data.forEach(post => { %>
                                        <tbody>
                                      <tr>
                                        <th scope="row">#<%= post.id_post %></th>
                                        <td><a href="/post/<%= post.id_post %>" class="link_card"><%= post.title %></a></td>
                                        <td><%= dateAndTime.format(post.created_at, 'DD/MM/YYYY HH:mm:ss' ) %>
                                        </td>
                                        <td><a href="/delete:" class="link_card"><i class="bi bi-trash-fill "></i></a>
                                            <a href="/edit:" class="link_card"><i class="bi bi-pencil-square"></i></a></td>
                                      </tr>
                                      
                                    </tbody>
                                <% }) %>
                                  </table>
                                <% } %>
                        </div>
                    </div>
                </div>
                <% } else {%>
                    <div class="container p-4">
                        <div class="row">
                            <div class="col-md-4 mx-auto">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3>Hi! <br> - Welcome My Post</h3>
                                        <a href="auth/login" class="btn btn-primary m-4">Login</a>
                                        <a href="auth/register" class="btn btn-primary m-4">Register</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

    </body>

</html>